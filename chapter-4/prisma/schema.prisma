generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User - Post has a one to many Posts relationship
model User {
  id       Int    @id @default(autoincrement()) //also can use(uuid) as id which must be a type String
  username String @unique
  password String
  // currentTime DateTime @default(now())
  // role     Role   @default(ADMIN)
  todos    Todo[]
}

model Todo {
  id        Int     @id @default(autoincrement())
  task      String
  completed Boolean @default(false)
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}
